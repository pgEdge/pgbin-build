[logging] 
default = FILE:/var/log/krb5libs.log 
kdc = FILE:/var/log/krb5kdc.log 
admin_server = FILE:/var/log/kadmind.log

[libdefaults] 
default_realm = {{ ad_domain }} 
dns_lookup_realm = true 
dns_lookup_kdc = true 
ticket_lifetime = 24h 
renew_lifetime = 7d 
forwardable = true

[realms] 
{{ ad_domain }} = { 
admin_server = {{ ad_pdc }}
kdc_server = {{ ad_pdc }}
kdc = {{ ad_pdc }}
}

[domain_realm] 
.{{ ad_domain }} = {{ ad_domain }} 
{{ ad_domain }} = {{ ad_domain }}
